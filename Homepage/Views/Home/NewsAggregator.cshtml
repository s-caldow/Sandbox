@model IEnumerable<RssItem>
@{
    ViewData["Title"] = "Newsfeed";
}

<header id="header" style="margin-bottom: 50px">
	<a asp-controller="Home" asp-action="NewsAggregator" class="logo"><strong>Newsfeed</strong></a>
</header>

<div class="box alt">
	<div class="row gtr-50 gtr-uniform">
		@foreach (var item in Model)
		{
		<div class="header" style="margin-bottom: 20px">
			<header class="minor">
				<h3>@item.Title</h3>
			</header>
			<div class="left date">@item.DatePublished</div>
			<div>
				@item.Description
			</div>
			<a class="url" href="@item.Url">Read more...</a>
			<hr />
		</div>
		}
	</div>
	
</div>